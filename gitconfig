[user]
	email = cinuor@gmail.com
	name = NanoBoom
[merge]
    tool = nvimdiff
    conflictstyle = diff3
[mergetool]
    prompt = true
    keepBackup = false
[mergetool "nvimdiff"]
    cmd = nvim -d -O $MERGED $LOCAL $REMOTE
[diff]
    tool = nvimdiff
[difftool]
    prompt = true
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[init]
    defaultBranch = main
[core]
  editor = nvim
	quotePath = false
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
